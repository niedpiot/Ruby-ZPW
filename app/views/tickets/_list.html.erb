<table class="table table-striped table-dark table-bordered">
  <thead>
    <tr>
      <th scope="col" style = "text-align: center">Email</th>
      <th scope="col" style = "text-align: center">Numer miejsca</th>
      <th scope="col" style = "text-align: center">Cena</th>
      <th scope="col" style = "text-align: center">Uzytkownik</th>
		<th colspan="3" style="text-align:center">Akcje</th>
    </tr>
  </thead>
  <tbody>
  	<% tickets.each do |ticket| %>
    <tr>
      <th scope="row" style = "text-align: center"><%= ticket.email_address %></th>
      <td style = "text-align: center"><%= ticket.seat_id_seq %></td>
      <td style = "text-align: center"><%= ticket.price %></td>
      <td style = "text-align: center"><%= ticket.user&.email || '-' %></td>
      <td style = "text-align: center">
      <div class="btn btn-info btn-sm">
      	<%= link_to 'Szczegóły', ticket %>
      </div>
      </td>
        <% if ticket.user == current_user %>
          <td style = "text-align: center">
          	<div class="btn btn-info btn-sm">
          		<%= link_to 'Zmodyfikuj', edit_ticket_path(ticket) %>
       		</div>
          </td>
          <td style = "text-align: center">
				<div class="btn btn-info btn-sm">
          		<%= link_to 'Usuń', ticket, method: :delete, data: { confirm: 'Jesteś pewien?' } %>
				</div>
          </td>
        <% end %>
    </tr>
    <% end %>
  </tbody>
</table>